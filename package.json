{
  "name": "Valencer",
  "version": "3.1.1n",
  "description": "A REST API to query valence patterns in FrameNet",
  "keywords": [
    "FrameNet",
    "Node",
    "Koa2",
    "MongoDB"
  ],
  "author": "Alexandre Kabbach",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint . --ext .js",
    "test": "npm run startmongo && NODE_ENV=testing ./node_modules/.bin/mocha './tests/**/*.@(js)' --reporter spec",
    "cover": "NODE_ENV=testing ./node_modules/.bin/istanbul cover _mocha -- ./tests/**/*.test.js",
    "doc": "rm -rf docs/ && ./node_modules/apidoc/bin/apidoc -i ./ -o ./docs/ -e node_modules",
    "dev": "NODE_ENV=development node server.js",
    "start": "NODE_ENV=production node server.js",
    "startmongo": "ps -ax | grep -v grep | grep mongo > /dev/null 2>&1 || mongod --fork --logpath /tmp/mongod.valencer.log --config ./config/mongod.conf",
    "flow": "flow",
    "posttest": "./node_modules/.bin/flow"
  },
  "homepage": "https://github.com/akb89/valencer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akb89/valencer.git"
  },
  "bugs": {
    "url": "https://github.com/akb89/valencer/issues"
  },
  "apidoc": {
    "name": "valencer-doc",
    "version": "3.0.0",
    "description": "Documentation for the Valencer API",
    "title": "Valencer API Doc",
    "url": "https://akb89.github.io/valencer/",
    "header": {
      "title": "General",
      "filename": "header.md"
    },
    "footer": {
      "title": "Help",
      "filename": "footer.md"
    }
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "flow": "^0.2.3",
    "kcors": "^2.2.1",
    "koa": "^2.2.0",
    "koa-router": "^7.2.0",
    "moment": "^2.18.1",
    "mongoose": "^4.10.4",
    "noframenet-core": "^3.2.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "chai": "^4.0.2",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "flow-bin": "^0.47.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "rewire": "^2.5.2"
  }
}
